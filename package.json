{
  "name": "team-alert-app",
  "version": "1.5.0",
  "description": "Team Alert System - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "alert",
    "team"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0"
  },
  "build": {
    "appId": "com.teamalert.app",
    "productName": "Team Alert",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
